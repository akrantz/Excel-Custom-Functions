{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: build",
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "npm: dev-server",
            "type": "npm",
            "script": "dev-server",
            "problemMatcher": []
        },
        {
            "label": "npm: packager",
            "type": "npm",
            "script": "packager",
            "problemMatcher": []
        },
        {
            "label": "npm: start-desktop-direct",
            "type": "npm",
            "script": "start-desktop-direct",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "stop",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "unload",
            "problemMatcher": []
        },
        {
            "label": "npm: watch",
            "type": "npm",
            "script": "watch",
            "problemMatcher": []
        },
        {
            "label": "Debug: Desktop (Proxy)",
            "dependsOn": [
                "npm: dev-server",
                "npm: packager",
                "npm: watch"
            ],
            "problemMatcher": []
        },
        {
            "label": "Debug: Desktop (Direct)",
            "dependsOn": [
                "npm: start-desktop-direct"
            ],
            "problemMatcher": []
        },
        {
            "label": "Debug: Online",
            "dependsOn": [
                "npm: dev-server",
                "npm: watch"
            ],
            "problemMatcher": []
        },
        {
            "label": "Stop Debug",
            "dependsOn": [
                "npm: stop",
            ]
        },
    ]
}